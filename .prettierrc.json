{
  "useTabs": false,
  "overrides": [
    {
      "files": "*.{ts,tsx}",
      "options": {
        "arrowParens": "avoid",
        "jsxSingleQuote": true,
        "jsxBracketSameLine": true,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 120,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false,
        "semi": true,
        "tabWidth": 2
      }
    },
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    }
  ]
}
